{% extends 'base.html.twig' %}

{% block title %}Hello MessageController!{% endblock %}
{% block body %}
<div style="margin-top: 200px">
    <section class="container">
        <div>
            <a href="{{ path('app_send') }}" class="btn btn-dark">Envoyé message</a>
        </div>
        <div class="row">
            <div class="col">
                <h1>Messagerie</h1>
                <h2>{{ message.title }}</h2>
                <p>Message de {{ message.sender.email }}</p>
                <p>Le {{ message.createdAt|date }}</p>
                <div>{{ message.message }}</div>
            </div>
        </div>
        <a href="{{ path('app_message') }}" class="btn btn-outline-primary">Acceuil</a>
        <a href="{{ path('app_received') }}" class="btn btn-outline-primary"> Retourne boite de réception</a>
        <a href="{{ path('app_sent') }}" class="btn btn-outline-primary">Eléments envoyés</a>
    </section>
</div>
{% endblock %}