{% extends 'base.html.twig' %}

{% block body %}
    <div style="margin-top: 200px;">
        <section class="card-body bg-light rounded">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            <h2 class="text-center mb-4">Modification du mot de passe de {{ app.user.name }} {{ app.user.firstname }}</h2>
            <div class="Login card-group">
                <form method="post" class="needs-validation" novalidate>
                    <div style="alignment: center">
                        <div class="form-group">
                            <label for="pass">Mot de passe</label>
                            <input type="password" id="pass" name="pass" class="form-control" required>
                            <div class="invalid-feedback">Veuillez entrer votre nouveau mot de passe.</div>
                        </div>

                        <div class="form-group">
                            <label for="pass2">Confirmer le mot de passe</label>
                            <input type="password" id="pass2" name="pass2" class="form-control" required>
                            <div class="invalid-feedback">Veuillez confirmer votre nouveau mot de passe.</div>
                        </div>

                        <button class="btn btn-primary btn-block mt-4">Valider</button>
                    </div>
                </form>
            </div>
        </section>
    </div>
{% endblock %}
