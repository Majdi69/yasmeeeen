{% extends 'base.html.twig' %}

{% block title %}Banque{% endblock %}

{% block body %}
    <div class="container">
        <p class="fs-1">La liste des banques de sang en Tunisie</p>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Tel</th>

            </tr>
            </thead>
            <tbody>
            {% for banque_de_sang in f %}

                <tr>
                    <td>{{ banque_de_sang.nom }}</td>
                    <td>{{ banque_de_sang.adresse }}</td>
                    <td>{{ banque_de_sang.tel }}</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune des banques de sang ajout√©</td>
                </tr>
            {% endfor %}
            <li><a href="#">{{ knp_pagination_render( f) }}</a></li>

            </tbody>
        </table>

    </div>
{% endblock %}
