{% extends 'base.html.twig' %}

{% block title %}Notifications index{% endblock %}

{% block body %}
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Notification Bar</h2>


            </div>

        </div>
    </section>
    <div class="container">
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Message</th>
            <th>Recipient</th>
            <th>Sender</th>
            <th>Type Sang</th>

        </tr>
        </thead>
        <tbody>
        {% for notification in notifications %}
            <tr>

                <td>{{ notification.title }}</td>
                <td>{{ notification.message }}</td>
                <td>{{ notification.recipient }}</td>
                <td>{{ notification.sender }}</td>
                <td>{{ notification.typesang }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div style="text-align: right">
        <div class="container">
            <a href="{{ path('app_notifications_new') }}"><button type="button" class="btn btn-success">Create</button></a>
        </div>
        </div>
    </div>
{% endblock %}