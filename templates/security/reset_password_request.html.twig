{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
<div style="margin-top: 150px">
    <section class="container my-3 bg-light p-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 bg-white p-4 rounded">
                <h1 class="text-center mb-4">Réinitialisation de mot de passe:</h1>
                <form action="" method="post" class="needs-validation" novalidate>
                    {{ form_start(requestPassForm) }}
                    <div class="form-group">
                        {{ form_label(requestPassForm.email, 'Adresse e-mail', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(requestPassForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre adresse e-mail'}}) }}
                        <div class="invalid-feedback">{{ form_errors(requestPassForm.email) }}</div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100 mt-3">Envoyer</button>
                    </div>
                    {{ form_end(requestPassForm) }}
                </form>
            </div>
        </div>
    </section>
</div>
{% endblock %}